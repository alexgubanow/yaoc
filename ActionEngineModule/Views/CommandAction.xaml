<UserControl x:Class="ActionEngineModule.Views.CommandAction"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ActionEngineModule.Views"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="800"
             xmlns:prism="http://prismlibrary.com/" xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
             prism:ViewModelLocator.AutoWireViewModel="True" >
    <StackPanel>
        <Label Content="XAddr:"/>
        <TextBox Text="{Binding XAddr}" TextWrapping="Wrap"/>
        <Label Content="Operation:"/>
        <TextBox Text="{Binding Operation}" TextWrapping="Wrap"/>
        <Label Content="Request:"/>
        <TextBox Text="{Binding Request}" AcceptsReturn="True" TextWrapping="Wrap" MinLines="3"
                 VerticalScrollBarVisibility="Auto"/>
    </StackPanel>
</UserControl>
